generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
  binaryTargets = ["native", "windows", "darwin-arm64"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  directUrl  = env("DIRECT_URL")
  schemas    = ["public", "next_auth"]
}
  
model User {
  id             String    @id @default(uuid())
  name           String?
  email          String?   @unique
  emailVerified  DateTime?
  verified         Boolean  @default(false)
  verificationCode String?  // temporary code
  image          String?
  hashedPassword String?
  scores         Int     @default(0)
  accounts       Account[]
  sessions       Session[]

  @@map("users")
  @@schema("next_auth")
}

model Account {
  id                 String   @id @default(uuid())
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         BigInt?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?
  oauth_token_secret String?
  oauth_token        String?

  userId String
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
  @@schema("next_auth")
}

model Session {
  id            String   @id @default(uuid())
  sessionToken  String   @unique
  userId        String
  expires       DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
  @@schema("next_auth")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([token, identifier])
  @@map("verification_tokens")
  @@schema("next_auth")
}

model Quiz {
  id            String   @id @default(uuid())
  question      String
  choices       Json
  correct_index Int
  created_at    DateTime @default(now()) @map("created_at")

  @@map("quizzes")
  @@schema("next_auth")
}

